<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TermTracker.Maui.ViewModels"
             x:DataType="vm:CourseViewModel"
             x:Class="TermTracker.Maui.Views.Controls.CourseControl">
    <VerticalStackLayout Margin="20" Spacing="10">

        <Label Text="Course Name" />
        <Entry Text="{Binding Course.CourseName}"/>

        <Label Text="Start Date" />
        <DatePicker x:Name ="CourseStartDate" Date="{Binding Course.CourseStartDate}"/>

        <Label Text="End Date" />
        <DatePicker x:Name ="CourseEndDate" Date="{Binding Course.CourseEndDate}"/>

        <Button x:Name="btnSave" Text="Save"></Button>

    </VerticalStackLayout>
    
</ContentView>
