<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:TermTracker.CoreBusiness.Models;assembly=TermTracker.CoreBusiness"
             x:DataType="model:Assessment"
             x:Class="TermTracker.Maui.Views.Controls.AlertControl">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Label Text="Alerts" FontAttributes="Bold"/>
        <Label Text="{Binding StartDate, StringFormat='{0:MM/dd/yyyy}'}" Grid.Row="1" VerticalOptions="Center"/>
        <Label Text="{Binding EndDate, StringFormat='{0:MM/dd/yyyy}'}" Grid.Row="2" VerticalOptions="Center"/>
        <Picker Grid.Row="1" Grid.Column="1"></Picker>
        <Picker Grid.Row="2" Grid.Column="1"></Picker>
    </Grid>

</ContentView>
